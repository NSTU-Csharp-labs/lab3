<Window    Background="#3c3c3c"    Icon="/Assets/logo.ico"    MinHeight="300"    MinWidth="300"    Title="Просмотр фотографий"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d"    x:Class="lab3.Controls.MainWindow.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:gl="clr-namespace:lab3.Controls.GL"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="clr-namespace:lab3.Controls.MainWindow"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid RowDefinitions="Auto, *, 30">        <StackPanel            Grid.Row="0"            HorizontalAlignment="Center"            Margin="0,10,0,0"            Orientation="Horizontal"            Spacing="3"            VerticalAlignment="Top">            <Button CornerRadius="8" IsVisible="{Binding IsVisibleDrawBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/draw_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button IsVisible="{Binding IsVisibleEffectBtn}" CornerRadius="{StaticResource ButtonCorner}" Command="{Binding OpenEffects}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/effects_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button IsVisible="{Binding IsVisibleRotateBtn}" CornerRadius="{StaticResource ButtonCorner}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/rotate_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>                        <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,10,0,0" IsVisible="{Binding IsVisibleEffectsElements}">                <Button Content="Back" Command="{Binding BackFromEffects}"></Button>                <CheckBox Content="BW" IsChecked="{Binding IsCheckedBW}" Command="{Binding EnableEffects}"></CheckBox>                <CheckBox Content="B" IsChecked="{Binding IsCheckedB }" Command="{Binding EnableEffects}"></CheckBox>                <CheckBox Content="R" IsChecked="{Binding IsCheckedR}" Command="{Binding EnableEffects}"></CheckBox>                <CheckBox Content="G" IsChecked="{Binding IsCheckedG}" Command="{Binding EnableEffects }"></CheckBox>            </StackPanel>        </StackPanel>        <Grid            ColumnDefinitions="Auto,*,Auto"            Grid.Row="1"            VerticalAlignment="Stretch">            <Button                CornerRadius="{StaticResource ButtonCorner}"                Grid.Column="0"                HorizontalAlignment="Left"                Margin="40,0,0,0"                VerticalAlignment="Center">                <Image                    Height="70"                    Source="{SvgImage /Assets/arrow_back_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Grid Grid.Column="1" Margin="24">                <gl:ImageRenderer Path="{Binding PathTest}" BlueFilter="{Binding BlueFilter}" GreenFilter="{Binding GreenFilter}" RedFilter="{Binding RedFilter}" BlackAndWhiteFilter="{Binding BlackAndWhiteFilter}"/>            </Grid>            <Button                CornerRadius="{StaticResource ButtonCorner}"                Grid.Column="2"                HorizontalAlignment="Right"                Margin="0,0,40,0"                VerticalAlignment="Center">                <Image                    Height="70"                    Source="{SvgImage /Assets/arrow_forward_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>        </Grid>    </Grid></Window>