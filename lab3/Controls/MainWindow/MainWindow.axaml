<Window    Background="#3c3c3c"    Icon="/Assets/logo.ico"    MinHeight="300"    MinWidth="300"    Title="Просмотр фотографий"    d:DesignHeight="450"    d:DesignWidth="800"    mc:Ignorable="d"    x:Class="lab3.Controls.MainWindow.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:gl="clr-namespace:lab3.Controls.GL"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="clr-namespace:lab3.Controls.MainWindow"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid RowDefinitions="Auto, *, 30">        <StackPanel            Grid.Row="0"            HorizontalAlignment="Center"            Margin="0,10,0,0"            MinHeight="130"            Orientation="Horizontal"            Spacing="3"            VerticalAlignment="Top">            <Button                Command="{Binding OpenImage}"                CornerRadius="8"                IsVisible="{Binding IsVisibleDrawBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/open_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button CornerRadius="8" IsVisible="{Binding IsVisibleDrawBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/draw_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button                Command="{Binding OpenEffects}"                CornerRadius="{StaticResource ButtonCorner}"                IsVisible="{Binding IsVisibleEffectBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/effects_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button Command="{Binding Rotate}" CornerRadius="{StaticResource ButtonCorner}" IsVisible="{Binding IsVisibleRotateBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/rotate_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Button CornerRadius="{StaticResource ButtonCorner}" IsVisible="{Binding IsVisibleSaveBtn}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/save_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>        </StackPanel>        <!--  Spacing="15"  -->        <StackPanel            Grid.Row="0"            HorizontalAlignment="Center"            IsVisible="{Binding IsVisibleEffectsElements}"            Margin="0,10,0,0"            Orientation="Horizontal"            Spacing="10"            VerticalAlignment="Top">            <Button Command="{Binding BackFromEffects}" CornerRadius="{StaticResource ButtonCorner}">                <Image                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/back_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <ToggleButton                Command="{Binding EnableEffects}"                HorizontalAlignment="Center"                HorizontalContentAlignment="Center"                IsChecked="{Binding IsCheckedBW}"                VerticalAlignment="Center"                VerticalContentAlignment="Center">                <StackPanel>                    <gl:ImageRenderer                        BlackAndWhiteFilter="true"                        Height="100"                        Img="{Binding Img}"                        Width="100" />                    <TextBlock HorizontalAlignment="Center" Text="Black And White" />                </StackPanel>            </ToggleButton>            <ToggleButton                Command="{Binding EnableEffects}"                HorizontalAlignment="Center"                HorizontalContentAlignment="Center"                IsChecked="{Binding IsCheckedR}"                VerticalAlignment="Center"                VerticalContentAlignment="Center">                <StackPanel>                    <gl:ImageRenderer                        Height="100"                        Img="{Binding Img}"                        RedFilter="true"                        Width="100" />                    <TextBlock HorizontalAlignment="Center" Text="Red" />                </StackPanel>            </ToggleButton>            <ToggleButton                Command="{Binding EnableEffects}"                HorizontalAlignment="Center"                HorizontalContentAlignment="Center"                IsChecked="{Binding IsCheckedG}"                VerticalAlignment="Center"                VerticalContentAlignment="Center">                <StackPanel HorizontalAlignment="Center">                    <gl:ImageRenderer                        GreenFilter="true"                        Height="100"                        Img="{Binding Img}"                        Width="100" />                    <TextBlock HorizontalAlignment="Center" Text="Green" />                </StackPanel>            </ToggleButton>            <ToggleButton                Command="{Binding EnableEffects}"                HorizontalAlignment="Center"                HorizontalContentAlignment="Center"                IsChecked="{Binding IsCheckedB}"                VerticalAlignment="Center"                VerticalContentAlignment="Center">                <StackPanel HorizontalAlignment="Center">                    <gl:ImageRenderer                        BlueFilter="true"                        Height="100"                        Img="{Binding Img}"                        Width="100" />                    <TextBlock HorizontalAlignment="Center" Text="Blue" />                </StackPanel>            </ToggleButton>        </StackPanel>        <Grid            ColumnDefinitions="Auto,*,Auto"            Grid.Row="1"            VerticalAlignment="Stretch">            <Button                CornerRadius="{StaticResource ButtonCorner}"                Grid.Column="0"                HorizontalAlignment="Left"                Margin="40,0,0,0"                VerticalAlignment="Center">                <Image                    Height="70"                    Source="{SvgImage /Assets/arrow_back_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>            <Grid Grid.Column="1" Margin="24">                <gl:ImageRenderer                    BlackAndWhiteFilter="{Binding BlackAndWhiteFilter}"                    BlueFilter="{Binding BlueFilter}"                    GreenFilter="{Binding GreenFilter}"                    Img="{Binding Img}"                    RedFilter="{Binding RedFilter}" />            </Grid>            <Button                CornerRadius="{StaticResource ButtonCorner}"                Grid.Column="2"                HorizontalAlignment="Right"                Margin="0,0,40,0"                VerticalAlignment="Center">                <Image                    Height="70"                    Source="{SvgImage /Assets/arrow_forward_icon.svg}"                    Width="{StaticResource IconSize}" />            </Button>        </Grid>    </Grid></Window>