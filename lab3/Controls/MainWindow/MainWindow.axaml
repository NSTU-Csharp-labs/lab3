<Window    x:Class="lab3.Controls.MainWindow.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:gl="clr-namespace:lab3.Controls.GL"    xmlns:local="clr-namespace:lab3.Controls.MainWindow"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="clr-namespace:lab3.Controls.MainWindow"    Title="Просмотр фотографий"    MinWidth="300"    MinHeight="300"    d:DesignHeight="450"    d:DesignWidth="800"    Background="#3c3c3c"    Icon="/Assets/logo.ico"    mc:Ignorable="d">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid RowDefinitions="Auto, *, 30">        <StackPanel            Orientation="Horizontal"             IsVisible="{Binding IsActionsVisible}"            Spacing="3"            Margin="30"            HorizontalAlignment="Center">            <Button Command="{Binding OpenImage}" CornerRadius="8">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/open_icon.svg}" />            </Button>            <Button CornerRadius="8" IsVisible="False">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/draw_icon.svg}" />            </Button>            <Button Command="{Binding OpenFilters}" CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/effects_icon.svg}" />            </Button>            <Button Command="{Binding Rotate}" CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/rotate_right_icon.svg}" />            </Button>            <Button Command="{Binding SaveImage}" CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/save_icon.svg}" />            </Button>        </StackPanel>        <StackPanel            HorizontalAlignment="Center"            Grid.Row="0"            IsVisible="{Binding IsFiltersVisible}"            Orientation="Horizontal"            Spacing="10">            <Button                 Command="{Binding CloseFilters}"                 CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="{StaticResource IconSize}"                    Source="{SvgImage /Assets/back_icon.svg}" />            </Button>            <ItemsControl Items="{Binding FilterButtons}">                <ItemsControl.ItemsPanel>                    <ItemsPanelTemplate>                        <StackPanel Orientation="Horizontal" />                    </ItemsPanelTemplate>                </ItemsControl.ItemsPanel>                <ItemsControl.ItemTemplate>                    <DataTemplate>                        <ToggleButton                            HorizontalAlignment="Center"                            VerticalAlignment="Center"                            HorizontalContentAlignment="Center"                            VerticalContentAlignment="Center"                            Command="{Binding Switch}"                            IsChecked="{Binding IsEnabled}">                            <StackPanel>                                <gl:ImageRenderer                                    Width="100"                                    Height="100"                                    Filters="{Binding EnabledFilters}"                                    Img="{Binding ImgBitmap}" />                                <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" />                            </StackPanel>                        </ToggleButton>                    </DataTemplate>                </ItemsControl.ItemTemplate>            </ItemsControl>        </StackPanel>        <Grid            Grid.Row="1"            VerticalAlignment="Stretch"            ColumnDefinitions="Auto,*,Auto">            <Button                Grid.Column="0"                Margin="40,0,0,0"                HorizontalAlignment="Left"                VerticalAlignment="Center"                Command="{Binding SwipeLeft}"                CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="70"                    Source="{SvgImage /Assets/arrow_back_icon.svg}" />            </Button>            <gl:ImageRenderer                Grid.Column="1"                Margin="24"                Filters="{Binding SelectedFilters}"                Img="{Binding Bitmap}" />            <Button                Grid.Column="2"                Margin="0,0,40,0"                HorizontalAlignment="Right"                VerticalAlignment="Center"                Command="{Binding SwipeRight}"                CornerRadius="{StaticResource ButtonCorner}">                <Image                    Width="{StaticResource IconSize}"                    Height="70"                    Source="{SvgImage /Assets/arrow_forward_icon.svg}" />            </Button>        </Grid>    </Grid></Window>